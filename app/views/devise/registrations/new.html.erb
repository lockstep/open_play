<div class="text-xs-center">
  <h2>Sign up</h2>
  <div class="spacer-20"></div>
  <div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row">
        <div class="col-sm-4 offset-sm-4">
          <%= f.label :first_name, class: "pull-left" %>
          <%= f.text_field :first_name, autofocus: "off",
            class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-4 offset-sm-4">
          <%= f.label :last_name, class: "pull-left" %>
          <%= f.text_field :last_name, autofocus: "off",
            class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-4 offset-sm-4">
          <%= f.label :email, class: "pull-left" %>
          <%= f.email_field :email, autofocus: "off", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4 offset-sm-4">
          <%= f.label :password, class: "pull-left" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4 offset-sm-4">
          <%= f.label :password_confirmation, class: "pull-left" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-12">
          <%= f.submit "Sign up", class: "btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <center>
      <%= render "devise/shared/links" %>
      </center>
    </div>
  </div>
</div>
