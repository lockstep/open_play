<div class="row">
  <div class="col-xs-12">
    <center>
      <h1>Create Activity</h1>
    </center>
  </div>
</div>
<div class="spacer-40"></div>

<%= form_for @activity, as: :activity, url: {action: 'create'} do |f| %>
  <div class="row form-group">
    <div class="col-xs-3">
      <%= f.label :type, 'Activity Type:' %>
    </div>
    <div class="col-xs-9">
      <%= f.select :type, Activity.types.collect {|t| [t.humanize, t.camelcase]} %>
    </div>
  </div>

  <div class="<%= ('has-danger' if @activity.errors[:name].any?) %> row form-group">
    <div class="col-xs-3">
      <%= f.label :name, 'Activity Name:' %>
    </div>
    <div class="col-xs-5">
      <%= f.text_field :name, placeholder: 'Activity name', class: 'form-control' %>
      <% @activity.errors[:name].each do |error| %>
        <div class="form-control-feedback">
          <%= error %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-xs-3">
      <%= f.label :start_time %>
    </div>
    <div class="col-xs-9">
      <%= f.time_field :start_time, { value: '08:00'} %>
    </div>
  </div>

  <div class="<%= ('has-danger' if @activity.errors[:end_time].any?) %> row form-group">
    <div class="col-xs-3">
      <%= f.label :end_time %>
    </div>
    <div class="col-xs-9">
      <%= f.time_field :end_time, { value: '16:00'} %>
      <% @activity.errors[:end_time].each do |error| %>
        <div class="form-control-feedback">
          <%= error %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-xs-3">
      <%= f.label :prevent_back_to_back_booking %>
    </div>
    <div class="col-xs-9">
      <%= f.check_box :prevent_back_to_back_booking %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-xs-12 text-xs-center">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
