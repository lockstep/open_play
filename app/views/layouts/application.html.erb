<!DOCTYPE html>
<html>
  <head>
    <title>OpenPlay</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <%= render 'layouts/shared/navbar' %>
      <% if notice || alert %>
        <%= render 'layouts/shared/alert' %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
