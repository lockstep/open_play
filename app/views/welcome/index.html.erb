<div id="hero-container">
  <div id="hero-background-image"></div>
  <div id="hero-content">
    <div class="text-xs-center" id="searchbar-container">
      <div class="row">
        <%= form_tag(search_path, method: 'get') do %>
          <div class="container">
            <div class="col-sm-3">
              <input type='text' id='datepicker', name='booking_date', class='form-control'>
            </div>
            <div class="col-sm-3">
              <input type='text' id='timepicker', name='booking_time', class='form-control'>
            </div>
            <div class="col-sm-3">
              <%= select_tag('activity_type', options_for_select(
                Activity.types.collect {|t| [t.humanize, t.camelcase]}),
              class: 'form-control') %>
            </div>
            <div class="col-sm-3">
              <%= submit_tag('Search', class: 'btn btn-default btn-block') %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

