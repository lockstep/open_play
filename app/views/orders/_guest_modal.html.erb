<div class='modal fade' id='guest-modal' tabindex='-1' role='dialog' aria-labelledby='guest-form' aria-hidden='true'>
  <div class='modal-dialog' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
          <span aria-hidden='true'>&times;</span>
        </button>
        <h4 class='modal-title' id='guest-form'>Order Form</h4>
      </div>
      <div class='modal-body'>
        <form>
          <div class='form-group'>
            <label for='first-name-order' class='form-control-label'>First Name:</label>
            <input type='text' class='form-control' id='first-name-order' name='first-name'>
          </div>
          <div class='form-group'>
            <label for='last-name-order' class='form-control-label'>Last Name:</label>
            <input type='text' class='form-control' id='last-name-order' name='last-name'>
          </div>
          <div class='form-group'>
            <label for='email-order' class='form-control-label'>Email:</label>
            <input type='text' class='form-control' id='email-order' name='email'>
          </div>
        </form>
      </div>
      <div class='modal-footer text-xs-center'>
        <button type='button' class='btn btn-primary' id='submit-order-form'>Submit</button>
      </div>
    </div>
  </div>
</div>
