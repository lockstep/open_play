<% if !user_signed_in? %>
  <h3>Guest Detail:</h3>
  <br />
  <%= fields_for(Guest.new) do |gf| %>
    <div class="form-group row">
      <%= gf.label :first_name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-3">
        <%= gf.text_field :first_name, class: 'form-control'  %>
      </div>
    </div>
    <div class="form-group row">
      <%= gf.label :last_name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-3">
        <%= gf.text_field :last_name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= gf.label :email, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-3">
        <%= gf.email_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= gf.label :phone_number, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-3">
        <%= gf.text_field :phone_number, class: 'form-control' %>
      </div>
    </div>
  <% end %>
<% end %>
