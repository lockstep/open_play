<% if @activities.empty? %>
  <h4> No results found. </h4>
<% else %>
  <div class="activity-list">
    <% @activities.each do |activity| %>
      <div class="row activity-result">
        <div class="col-xs-12">
          <div class="col-xs-3">
            <div class="activity-preview">
              <%= render 'businesses/info_tile', business: activity.business %>
            </div>
          </div>
          <div class="col-xs-9">
            <%= form_tag(new_order_path, method: :get) do %>
              <div class="col-xs-9">
                <div class="activity-info">
                  <span class='activity-name'><%= activity.name %></span>
                  <% reservables_per_page(activity, @number_of_reservables_per_page).each do |reservable| %>
                    <%= render 'search/reservable', reservable: reservable %>
                  <% end %>
                  <% if remaining_reservables?(activity, @number_of_reservables_per_page) %>
                    <div class='remaining-slots'>
                      <span class='view-more'>
                        <%= link_to 'view more', search_more_reservables_path(
                          activity_id: activity.id,
                          booking_date: @booking_date,
                          booking_time: @booking_time), remote: true %>
                      </span>
                    </div>
                  <% end %>
                </div>
              </div>

              <%= hidden_field_tag('date', @booking_date) %>
              <%= hidden_field_tag("prevent-btb-booking-#{activity.id}",
                activity.prevent_back_to_back_booking) %>
              <%= hidden_field_tag('activity_id', activity.id) %>
              <div class="col-xs-2 book-section">
                <%= submit_tag 'Book', class: 'btn btn-info book-btn' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<% end %>
